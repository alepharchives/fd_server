{require_otp_vsn, "R14"}.
{erl_opts, [warn_unused_vars,
            warn_export_all,
            warn_shadow_vars,
            warn_unused_import,
            warn_unused_function,
            warn_bif_clash,
            warn_unused_record,
            warn_deprecated_function,
            warn_obsolete_guard,
            strict_validation,
            warn_export_vars,
            warn_exported_vars,
            warn_missing_spec,
            warn_untyped_record, debug_info]}.
{edoc_opts, [{report_missing_types, true}]}.
{port_envs, [{"CFLAGS", "$CFLAGS -DDYNAMIC_DRIVER -Iinclude -Ic_src -fno-stack-protector"},
             {"LDFLAGS", "$LDFLAGS -shared -lresolv -lnsl"}]}.
{so_specs, [{"priv/fdsrv_drv.so", ["c_src/fdsrv_drv.o", "c_src/fdlib.o"]},
            {"priv/fdsend_drv.so", ["c_src/fdsend_drv.o", "c_src/fdlib.o"]}]}.
{port_pre_script, {"priv/c_make.sh", "priv/fdsrv_drv.so"}}.
{port_cleanup_script, "priv/c_clean.sh"}.
{dialyzer_opts, [{warnings, [unmatched_returns, error_handling, race_conditions, behaviours]}]}.
{xref_checks, [undefined_function_calls]}.